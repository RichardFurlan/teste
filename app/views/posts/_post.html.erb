<div class='card bg-light mb-3'>
  <div class='card-body'>
    <h4><%= link_to post.title, post %></h4>

    <div class='text-muted mb-2'>
      <em>Por <%= post.author %> (<%= l post.created_at, format: :short %>)</em>
    </div>

    <p><%= post.body.truncate(200) %></p>

    <p class='text-muted'><%= pluralize(post.comments.count, 'Comentário') %></p>

    <div class="d-flex justify-content ">
      <%= link_to 'Ler Artigo', post, class: 'btn btn-primary m-2' %>
      <%= link_to 'Editar', edit_post_path(post), class: 'btn btn-secondary m-2' %>
      <%= button_to 'Apagar', post, method: :delete, class: 'btn btn-danger m-2',
        data: { confirm: 'Você tem certeza?' } %>
      </div>
  </div>
</div>